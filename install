#!/bin/bash

if [ -d ~/medusa-ide ]; then
    cd ~/medusa-ide
    git fetch
    cd ~
else
    git clone https://github.com/damon-kwok/my-emacs-config ~/medusa-ide
fi

set bkdir=emacs-config-backup/`date "+%Y-%m-%d@%H-%M-%S`
mkdir -p $bkdir

mv ~/.emacs $bkdir
mv ~/config $bkdir

cp -a ~/medusa-ide/home/config/.emacs ~/.emacs
ln -s ~/medusa-ide/home/config ~/config
